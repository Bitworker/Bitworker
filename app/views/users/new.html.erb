<%= simple_form_for @user do |f| %>

  <%= f.input :email, :placeholder => "user@domain.com", :label => "Login Name" %>
  <%= f.input :password, :placeholder => "******", :label => "Passwort" %>
  <%= f.input :password_confirmation, :placeholder => "******", :label => "Passwort wiederholen" %>
  <%= f.button :submit %>
<% end %>

